{
  "name": "@pioneer-platform/pioneer-config",
  "version": "6.3.30",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "find-package-json": "^1.2.0",
    "fs-extra": "^9.0.1",
    "mkdirp": "^1.0.4",
    "ts-node": "^9.0.0"
  },
  "scripts": {
    "npm": "npm i",
    "test": "rm -Rf lib && npm run build && ts-node __tests__/test-module.ts",
    "lint": "prettier --write '**/**/*.ts'",
    "start": "nodemon --watch 'src/**/*.ts' --exec ts-node __tests__node",
    "build": "tsc -p .",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test-jest": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "prepublish": "rm -Rf lib && npm run build",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map lib node_modules"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^13.13.34",
    "@types/source-map-support": "^0.5.3",
    "jest": "^26.4.2",
    "onchange": "^7.0.2",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^25.4.0",
    "typescript": "^3.9.7"
  }
}
